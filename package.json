{
  "name": "tickr-alerts",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon --watch index.js --watch config --ext js,json --exec \"node index.js\"",
    "alerts:once": "node index.js --once --http --state state.json",
    "contract-monitor": "node scripts/contract-transfer-monitor.js",

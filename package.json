    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs --lines 120",
    "pm2:save": "pm2 save",
    "pm2:resurrect": "pm2 resurrect"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "ethers": "^6.13.5",
    "ws": "^8.18.0"

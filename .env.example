# Required: Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
CHAT_ID=your_telegram_chat_id

# Required: Ethereum provider (set one path)
# Option 0: generic RPC URL (best for GitHub Actions cron)
# RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_key
# Option A (recommended): Alchemy key
ALCHEMY_API_KEY=your_alchemy_api_key
# Option B: full endpoints
# ALCHEMY_WS_URL=wss://eth-mainnet.g.alchemy.com/v2/your_key
# ALCHEMY_HTTPS_URL=https://eth-mainnet.g.alchemy.com/v2/your_key
# Option C: Infura
# INFURA_PROJECT_ID=your_infura_project_id
# INFURA_WS_URL=wss://mainnet.infura.io/ws/v3/your_project_id
# INFURA_HTTPS_URL=https://mainnet.infura.io/v3/your_project_id

# Optional: Etherscan labeling / contract metadata
ETHERSCAN_API_KEY=your_etherscan_api_key
ETHERSCAN_BASE_URL=https://api.etherscan.io/v2/api

# Core behavior (main monitor)
MIN_USD=0
MIN_BRIDGE_USD=0
ALWAYS_ALERT_ALL=1
OUTGOING_ONLY=1
ALERT_ALL_TX=0
NEW_CONTRACT_DAYS=30

# Network naming (defaults shown)
ALCHEMY_NETWORK=eth-mainnet
INFURA_NETWORK=mainnet

# Main monitor health/logging
STARTUP_PING=0
HEARTBEAT_MINUTES=0
DEBUG=0

# GitHub Actions / stateless once-run mode
STATE_FILE=state.json
MAX_BLOCKS_PER_RUN=200
MAX_RECENT_ALERT_KEYS=5000
STATE_BOOTSTRAP_LATEST=1

# Contract monitor behavior
CONTRACT_ADDRESSES=0xA27EC0006e59f245217Ff08CD52A7E8b169E62D2,0x449a917fb4910cb2f57335D619e71674fFB8BC44
CONTRACT_MIN_USD=0
HTTP_POLL_MS=4000
PRICE_CACHE_MS=60000
BAL_CACHE_MS=120000

# Optional manual ETH/USD override (used when price APIs fail)
# ETH_USD=3000
